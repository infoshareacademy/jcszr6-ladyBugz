@model BusinessLogic.Recipe

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Ingredients[0].Product.Id"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Ingredients[0].Product.Id
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Ingredients[0].Product.Name"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Ingredients[0].Product.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Ingredients[0].Product.ProductCategory"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Ingredients[0].Product.ProductCategory
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Ingredients[0].Product.UnitOfMeasure"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Ingredients[0].Product.UnitOfMeasure
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Ingredients[0].Quantity"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Ingredients[0].Quantity
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" @Html.ActionLink("Edit", "Edit", new { id = Model.Id})
    <a class="btn btn-success" asp-controller="Recipes" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-arrow-left"></i> Back to List </a>
</div>