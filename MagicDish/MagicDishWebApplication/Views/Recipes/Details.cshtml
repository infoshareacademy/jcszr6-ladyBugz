@model BusinessLogic.Recipe

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Id"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Id
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="CookingTimeInMinutes"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.CookingTimeInMinutes
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="IsVegeterian"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.IsVegeterian
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" @Html.ActionLink("Edit", "Edit", new { id = Model.Id})
    <a class="btn btn-success"  asp-action="Index">Back to List</a>
</div>
