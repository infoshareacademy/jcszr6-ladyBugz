@model IEnumerable<BusinessLogic.ProductQuantity>


@{
    ViewData["Title"] = "Index";
}

<h1>Welcome to your RepositoryName</h1>
<br />


<p>
    <a class="btn btn-primary" asp-action="Create">Add product to your repository</a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            @*<th>
                <label asp-for="First().Product.Id"></label>
            </th>*@
            <th>
                <label asp-for="First().Product.Name"></label>
            </th>
            <th>
                <label asp-for="First().Product.ProductCategory"></label>
            </th>
            <th>
                <label asp-for="First().Quantity"></label>
            </th>
            <th>
                <label asp-for="First().Product.UnitOfMeasure"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var product in Model) {
        <tr>
            @*<td>
                @product.Product.Id
            </td>*@
            <td>
                @product.Product.Name
            </td>
            <td>
                @product.Product.ProductCategory
            </td>
            <td>
                @product.Quantity
            </td>
            <td>
                @product.Product.UnitOfMeasure
            </td>
            <td>
               <a class="btn btn-primary" @Html.ActionLink("Edit", "Edit", new { id = product.Product.Id }) ></a> 
               <a class="btn btn-success" @Html.ActionLink("Details", "Details", new { id = product.Product.Id }) ></a>   
               <a class="btn btn-warning" @Html.ActionLink("Delete", "Delete", new { id = product.Product.Id }) ></a> 
            </td>
        </tr>
}
    </tbody>
</table>
