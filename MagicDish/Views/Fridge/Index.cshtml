@model IList<ProductQuantity>
@{
    ViewData["Title"] = "Index";
}

<h1>Welcome to your Fridge!</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Food Category
            </th>
            <th>
                Product
            </th>
            <th>
                Amount
            </th>
            <th>
                Unit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.ProductCategory
                </td>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="50%">
                    @obj.Quantity
                </td>
                <td width="50%">
                    @obj.UnitOfMeasure
                </td>
            </tr>
        }
    </tbody>
</table>

