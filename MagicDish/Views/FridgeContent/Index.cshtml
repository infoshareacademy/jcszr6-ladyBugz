@model List<MagicDish.Web.ViewModels.FridgeContentViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Welcome to your fridge!</h1>

<div class="row pt-4">
    <div class="col-6">
        <h2>Products available in your fridge</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Fridge" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp; Add new product</a>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Food Category
            </th>
            <th>
                Product
            </th>
            <th>
                Amount
            </th>
            <th>
                Unit of measure
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var prod in Model)
        {
            <tr>
                <td width="25%">
                    @prod.ProductCategory
                </td>
                <td width="25%">
                    @prod.Name
                </td>
                <td width="25%">
                    @prod.Amount
                </td>
                <td width="25%">
                    @prod.UnitOfMeasure
                </td>
            </tr>
        }
    </tbody>
</table>