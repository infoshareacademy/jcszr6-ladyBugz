@model List<MagicDish.Web.ViewModels.FridgeContentViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Welcome to your fridge!</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Food Category
            </th>
            <th>
                Product
            </th>
            <th>
                Amount
            </th>
            <th>
                Unit of measure
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var prod in Model)
        {
            <tr>
                <td width="25%">
                    @prod.ProductCategory
                </td>
                <td width="25%">
                    @prod.Name
                </td>
                <td width="25%">
                    @prod.Amount
                </td>
                <td width="25%">
                    @prod.UnitOfMeasure
                </td>
            </tr>
        }
    </tbody>
</table>